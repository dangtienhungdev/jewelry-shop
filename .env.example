# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=jewelry-shop
DB_NAME=jewelry-shop

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Application Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=api/v1

# Session Configuration
SESSION_SECRET=your-session-secret

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=uploads

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=jewelry-shop@email.com

# Payment Configuration
VNPAY_TMN_CODE=your-vnpay-tmn-code
VNPAY_HASH_SECRET=your-vnpay-hash-secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=http://localhost:3000/api/v1/payment/vnpay/return

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Swagger Configuration
SWAGGER_TITLE=Jewelry Shop API
SWAGGER_DESCRIPTION=API documentation for Jewelry Shop e-commerce platform
SWAGGER_VERSION=1.0.0
SWAGGER_TAG=jewelry-shop